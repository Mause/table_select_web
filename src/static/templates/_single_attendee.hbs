<li class="list-group-item attendee">
    {{attendee.attendee_name}}
    <button type="button" class="spec_close badge"
        {{action requestRemoveAttendee attendee}}
        >&times;</button>

    {{#if attendee.removal_request_exists}}
        <i class="glyphicon glyphicon-info-sign removal_request_notif" title="Removal request pending"></i>
    {{/if}}
</li>
