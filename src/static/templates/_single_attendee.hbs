<li class="attendee">
    <span tabindex="-1">
        {{attendee.attendee_name}}
        <button type="button" class="spec_close"
            {{!i really dont like this target, but i will live}}
            {{log_label "this" this}}
            {{debugger}}
            {{action requestRemoveAttendee attendee}}
            >&times;</button>

        {{#if attendee.removal_request_exists}}
            <i class="icon-info-sign removal_request_notif" title="Removal request pending"></i>
        {{/if}}
    </span>
</li>
